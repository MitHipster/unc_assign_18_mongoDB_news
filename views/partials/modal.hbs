<div id="add-comment-modal" class="modal">
  <div class="modal-content container">
    <h4>Add Comment</h4>
    <p>Share your thoughts about the article, writer, etc.</p>
    <form id="comment-form" action="" method="post">
      <div class="row">
        <div class="input-field col s12">
          <input id="title" type="text" class="validate" name="title" required>
          <label for="title">Title</label>
        </div>
        <div class="input-field col s12">
          <textarea id="comment" class="materialize-textarea validate" name="comment" required></textarea>
          <label for="comment">Comment</label>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn add-comment" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>
